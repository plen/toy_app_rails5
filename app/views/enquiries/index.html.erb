<p id="notice"><%= notice %></p>

<h1>Enquiries</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Enquiry date</th>
      <th>Pax</th>
      <th>Max cost</th>
      <th>Min cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enquiries.each do |enquiry| %>
      <tr>
        <td><%= enquiry.user_id %></td>
        <td><%= enquiry.enquiry_date %></td>
        <td><%= enquiry.pax %></td>
        <td><%= enquiry.max_cost %></td>
        <td><%= enquiry.min_cost %></td>
        <td><%= link_to 'Show', enquiry %></td>
        <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
        <td><%= link_to 'Destroy', enquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

